@model List<DataAccess.DTO.PostDTO>
@{
    ViewData["Title"] = "Post Management";
}
<div class="container">

    <h2>All Posts</h2>


    @*<div class="form-group">
    <input type="text" class="form-control" placeholder="Search Movies" id="SearchName">
    </div>*@
    @* <div class="text-center panel-body">
    <button id="GetButton" class="btn btn-sm btn-primary">Get Movie</button>
    </div>*@
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Author</th>
                <th>Created Date</th>
                <th>Published Date</th>
                <th>Published</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var post in Model)
            {
                <tr>
                    <td>@post.Id</td>
                    <td>@post.Title</td>
                    <td>@post.Author.FullName</td>
                    <td>@post.CreateAt.ToShortDateString()</td>
                    <td>@post.PublishedAt.ToShortDateString()</td>
                    <td>@post.Published</td>
                </tr>
            }
        </tbody>
    </table>

</div>